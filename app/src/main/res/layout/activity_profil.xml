<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2e3237"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mohamed.travelb.ProfilActivity">

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:hint="Email Address"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"

        android:inputType="textEmailAddress"
        android:layout_below="@+id/gSpinner"
        android:layout_alignLeft="@+id/gSpinner"
        android:layout_alignStart="@+id/gSpinner"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="12"
        android:id="@+id/etName"
        android:hint="Full name"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"


        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:textColorHint="#ffffff"

        android:ems="12"
        android:id="@+id/etDob"
        android:hint="YYYY-MM-DD"
        android:textColor="#ffffff"

        android:layout_below="@+id/etUsername"
        android:layout_alignLeft="@+id/etUsername"
        android:layout_alignStart="@+id/etUsername"
        android:layout_marginTop="8dp" />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:entries="@array/gender"
        android:id="@+id/gSpinner"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/etDob"
        android:layout_alignLeft="@+id/etDob"
        android:layout_alignStart="@+id/etDob"
        android:layout_marginTop="35dp">
    </Spinner>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="12"
        android:id="@+id/etUsername"
        android:textColorHint="#ffffff"

        android:hint="Username"
        android:textColor="#ffffff"

        android:layout_below="@+id/etName"
        android:layout_alignLeft="@+id/etName"
        android:layout_alignStart="@+id/etName"
        android:layout_marginTop="12dp" />


    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:paddingBottom="10dp"
        android:text="update"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/a"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
